{% extends 'base.html.twig' %}

{% block title %}Hello ReservationController!{% endblock %}

{% block body %}
<div class="bg-gray-100 h-screen">
<div class="p-auto md:flex md:justify-around pt-20">
    <div>
    <div class="border-t border-gray-200 pt-4">
        <div class="flex justify-between">
        <dt class="font-medium text-gray-900">Nom de la chambre : {{chambre.nomchambre}}</dt>
        <i class="fas fa-times text-red-700"></i>
    </div>
     <dd class="mt-2 text-sm text-gray-500">Au etage :{{chambre.etage}}</dd>
     <dd class="mt-2 text-sm text-gray-500">Bareme de personne : {{chambre.contenumax}}</dd>
           <dd class="mt-2 text-sm text-gray-500">
          {% if chambre.etat == false %}
           <h1>Disponibilité : <span class="text-green-500 font-bold">Disponible</span> </h1> 
            {% else %}
            <div>Disponibilité : <span class="text-red-500 font-bold">non Disponible </span> </div>
             
          {% endif %}
          </dd>
    </div>
    </div>
                <div>
                  {{form_start(form)}}
                        <div class="grid grid-cols-1 gap-4 sm:gap-6 lg:gap-8">
                            <h1 class="text-3xl font-bold">Reservation</h1>
                        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-6"> 
                            <div class="sm:col-span-3">
             
                            <div class="mt-2">
                                {{form_row(form.nom)}}
                            </div>
                            </div>

                            <div class="sm:col-span-3">
                       
                            <div class="mt-2">
                                {{form_row(form.prenom)}}
                            </div>
                            </div>
                            <div class="sm:col-span-3">
                        
                            <div class="mt-2">
                                {{form_row(form.numero)}}
                            </div>
                            </div>
                            <div class="sm:col-span-3">
                    
                            <div class="mt-2">
                                {{form_row(form.nombre_personne)}}
                            </div>
                            </div>
                            <div class="sm:col-span-3">
                  
                            <div class="mt-2">
                               {{form_row(form.adresse)}}
                            </div>
                            </div>
                        </div>
                        </div>
                            <div class="mt-5 flex justify-center">
                                <button class="bg-indigo-600 p-2 text-sm text-white hover:bg-indigo-400 rounded">Ajouter</button>
                            </div>  
                    {{form_end(form)}}
                </div>
</div>
</div>
{% endblock %}
