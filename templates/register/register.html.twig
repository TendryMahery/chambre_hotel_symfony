{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block body %}
<div class="flex bg-gradient-to-b from-gray-200 to-gray-10 min-h-full flex-col justify-center px-6 py-2 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <img class="mx-auto h-20 w-auto" src="w3images/app5.jpg" alt="Your Company">
    <h2 class="mt-4 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Inscription pour gerer l'hotel</h2>
  </div>

  <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-sm">
      {{form_start(form)}}
      <div>
        <div class="mt-2">
         {{form_row(form.nom)}}
        </div>
      </div>
       <div>
        <div class="mt-2">
        {{form_row(form.prenom)}}
        </div>
      </div>
      <div>
        <div class="flex items-center justify-between">
          <div class="text-sm">
            <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">se souvenir de moi</a>
          </div>
        </div>  
        <div class="mt-2">
          {{form_row(form.mdp)}}
         </div>
      </div>

      <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">s'incrire</button>
      </div>
      {{form_end(form)}}

    <p class="mt-10 text-center text-sm text-gray-500">
      <a href="#" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Hotel sava Betatao</a>
    </p>
  </div>
</div>
{% endblock %}
